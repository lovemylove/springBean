<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

	<bean id="helloworld1" class="ioc.aop.HelloWorldImpl1" />
	<bean id="helloworld2" class="ioc.aop.HelloWorldImpl2" />
	
	<bean id="timehandler" class="ioc.aop.TimeHandler" />
	
	<aop:config>
		<aop:aspect id="time" ref="timehandler">
			<aop:pointcut expression="execution(* ioc.aop.HelloWorld.*(..))" id="addAllMethod"/>
			<aop:before method="printTime" pointcut-ref="addAllMethod"/>
			<aop:after method="pirntTime" pointcut-ref="addAllMethod"/>
		</aop:aspect>
	</aop:config>
	
</beans>